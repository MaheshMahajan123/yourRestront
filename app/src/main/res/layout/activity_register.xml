<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/n"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/signup"
        android:layout_marginTop="17dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewSignup"
            android:layout_width="410dp"
            android:layout_height="66dp"
            android:background="@drawable/colorpink"
            android:padding="15dp"
            android:text=" Have Account? Sign Up"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="@color/WhiteSmoke" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="๖ۣۜℜegestor"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/Aqua"
        android:textSize="40dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/User_name"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="89dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="@color/GhostWhite"
        android:textColorHint="@color/Ivory" />

    <EditText

        android:id="@+id/email"

        android:layout_width="371dp"

        android:layout_height="wrap_content"

        android:layout_below="@+id/User_name"
        android:layout_alignStart="@+id/User_name"
        android:layout_alignEnd="@+id/User_name"
        android:layout_marginStart="-5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:paddingBottom="15dp"
        android:textColor="@color/GhostWhite"
        android:textColorHint="@color/Ivory" />


    <EditText
        android:id="@+id/password"
        android:layout_width="319dp"
        android:layout_height="59dp"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:layout_marginStart="-3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="54dp"
        android:fontFamily="sans-serif"
        android:hint="password"
        android:paddingBottom="15dp"
        android:textColor="@color/GhostWhite"
        android:textColorHint="@color/Ivory" />

    <EditText
        android:id="@+id/cpass"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_alignStart="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_marginStart="4dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="-52dp"
        android:fontFamily="sans-serif"
        android:hint="Conform password"
        android:paddingBottom="15dp"
        android:textColor="@color/GhostWhite"
        android:textColorHint="@color/Ivory" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpass"
        android:layout_alignStart="@+id/cpass"
        android:layout_alignEnd="@+id/cpass"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="10dp"
        android:ems="10"
        android:hint="phone No.."
        android:inputType="phone"
        android:textColor="@color/GhostWhite"
        android:textColorHint="@color/Ivory" />

    <Button
        android:id="@+id/signup"
        android:layout_width="177dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/phone"
        android:layout_alignStart="@+id/phone"
        android:layout_alignEnd="@+id/phone"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="99dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/shape"
        android:text="signup"
        android:textColor="@color/Aquamarine"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/eye"
        android:layout_width="66dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="27dp"
        android:background="@android:color/transparent"
        android:paddingTop="10dp"

        android:text="SHOW"
        android:textSize="15dp"
        android:textStyle="bold" />


</RelativeLayout>